<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray050"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:background="?attr/SkeletonBackground"
        android:id="@+id/view_place_detail_image_skeleton"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/view_place_detail_category_skeleton"
        android:background="?attr/SkeletonBackground"
        android:layout_width="40dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/view_place_detail_image_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/view_place_detail_title_skeleton"
        android:background="?attr/SkeletonBackground"
        android:layout_width="120dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/view_place_detail_category_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/view_place_detail_location_skeleton"
        android:background="?attr/SkeletonBackground"
        android:layout_width="70dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/view_place_detail_title_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/view_place_detail_host_skeleton"
        android:background="?attr/SkeletonBackground"
        android:layout_width="70dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/view_place_detail_location_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/view_place_detail_time_skeleton"
        android:background="?attr/SkeletonBackground"
        android:layout_width="70dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/view_place_detail_host_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/view_place_detail_time_skeleton"
        >

        <include layout="@layout/item_notice_skeleton" />

        <include layout="@layout/item_notice_skeleton" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>