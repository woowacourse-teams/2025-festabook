<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fAQItem"
            type="com.daedan.festabook.presentation.news.faq.model.FAQItemUiModel" />

        <variable
            name="OnNoticeClickListener"
            type="com.daedan.festabook.presentation.news.notice.adapter.OnNewsClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_gray100_stroke_gray200_radius_16dp"
        android:onClick="@{()->OnNoticeClickListener.onFAQClick(fAQItem)}"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_faq_question"
            style="@style/PretendardBold14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{fAQItem.question}"
            app:layout_constraintBottom_toTopOf="@id/tv_faq_answer"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            tools:text="Q. 주차 어디에다가 해요?" />

        <ImageView
            android:id="@+id/iv_faq_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/faq_expand"
            app:layout_constraintBottom_toBottomOf="@id/tv_faq_question"
            app:layout_constraintEnd_toEndOf="@id/tv_faq_question"
            app:layout_constraintTop_toTopOf="@id/tv_faq_question" />

        <TextView
            android:id="@+id/tv_faq_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{fAQItem.answer}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_faq_question"
            tools:text="주차 지원은 없습니다 !!대중교통을 타고 오세요 !!!!!" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>