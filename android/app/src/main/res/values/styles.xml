    <!-- Body -->
    <style name="PretendardMedium16">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PretendardMedium14">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PretendardRegular14">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PretendardBold12">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PretendardMedium12">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PretendardRegular12">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Caption -->
    <style name="PretendardRegular10">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NoActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LostItemModalDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MainAlertNegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray500</item>
        <item name="strokeColor">@color/gray400</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MainAlertPositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray050</item>
        <item name="backgroundTint">@color/blue400</item>
    </style>

    <style name="MainAlarmDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/MainAlertNegativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/MainAlertPositiveButton</item>
        <item name="android:background">@color/gray050</item>
    </style>


</resources>
